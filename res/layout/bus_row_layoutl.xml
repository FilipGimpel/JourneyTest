<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageview_transport_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/bus" />

    <TextView
        android:id="@+id/textview_start_and_destination"
        android:layout_toRightOf="@+id/imageview_transport_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    
    <TextView
        android:id="@+id/textview_seat"
		android:layout_toRightOf="@+id/imageview_transport_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_start_and_destination"></TextView>
    

</RelativeLayout>